<Window x:Class="OBD2Reader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:design="clr-namespace:OBD2Reader.ViewModel.DesignerViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        d:DataContext="{d:DesignInstance Type=design:DesignerMainWindowViewModel, IsDesignTimeCreatable=True}">
    <StackPanel>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Canvas Width="15" Height="15" Background="Red" ToolTip="Connection" HorizontalAlignment="Left"/>
            <Button Grid.Column="1" Width="50"/>
        </Grid>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="{Binding Path=Car.Make}"/>
            <Label Content="{Binding Path=Car.Model}"/>
            <Label Content="{Binding Path=Car.Year}"/>
        </StackPanel>
        
        <TabControl>
            <TabItem Header="Live"></TabItem>
            <TabItem Header="State"></TabItem>
        </TabControl>
    </StackPanel>
    
</Window>
